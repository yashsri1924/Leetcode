class Solution {
public:
    int mySqrt(int x) {
        if (x < 2) return x;

        int left = 1, right = x / 2, ans = 0;

        while (left <= right) {
            int mid = left + (right - left) / 2;

            // To avoid overflow, use long long for multiplication
            long long square = (long long)mid * mid;

            if (square == x) return mid;
            else if (square < x) {
                ans = mid;        // mid could be the answer
                left = mid + 1;   // try to find a larger one
            } else {
                right = mid - 1;  // try to find a smaller one
            }
        }

        return ans;
    }
};
